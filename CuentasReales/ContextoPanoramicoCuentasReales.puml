title Diagrama Panorámico de sistema Módulo Cuentas Reales

Person(agente_cumplo, "Agente Cumplo", "Usuario interno de Cumplo.")



Enterprise_Boundary(c0, "Sitios") {
    System_Ext(s_tesoreria, "Sitio Tesorería", " permite operar como Agente Cumplo de forma segura con procesos sensibles en Cumplo.")
}
Enterprise_Boundary(c1, "Módulos") {
    System( modulo_cuentas_reales, "Módulo Cuentas Reales", "El vigía de pagos y generador de nóminas. Mantiene el registro de cuentas reales, movimientos y saldos, como vienen desde el mundo exterior y los transforma en transacciones de ingreso y egreso.")
